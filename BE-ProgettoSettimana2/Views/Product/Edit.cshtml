@model BE_ProgettoSettimana2.Models.Product

<h2 class="mt-3">Modifica Prodotto</h2>

<form asp-action="Edit" asp-controller="Product" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="CoverImageFile" class="control-label">Immagine di copertina</label>
        <input asp-for="CoverImageFile" type="file" class="form-control-file" />
        <span asp-validation-for="CoverImageFile" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Image1File" class="control-label">Immagine modello scarpa</label>
        <input asp-for="Image1File" type="file" class="form-control-file" />
        <span asp-validation-for="Image1File" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Image2File" class="control-label">Immagine modello scapra laterale</label>
        <input asp-for="Image2File" type="file" class="form-control-file" />
        <span asp-validation-for="Image2File" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-danger text-black mt-2">Salva Modifiche</button>
</form>
